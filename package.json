{
  "name": "@peterek/tailwindcss-tools",
  "version": "0.3.0",
  "description": "Tools to help building Tailwind CSS plugins library",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "css",
    "tailwind",
    "tailwindcss",
    "tool",
    "tools",
    "plugin",
    "plugins"
  ],
  "author": {
    "name": "Jiri Peterek",
    "email": "jiri@peterek.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterekjs/tailwindcss-tools.git"
  },
  "bugs": {
    "url": "https://github.com/peterekjs/tailwindcss-tools/issues"
  },
  "homepage": "https://github.com/peterekjs/tailwindcss-tools#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/tailwindcss-tools.cjs",
      "default": "./dist/tailwindcss-tools.js"
    },
    "./src/*": "./src/*"
  },
  "types": "./dist/index.d.ts",
  "typescript": {
    "definition": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@peterek/helpers": "^2.2.0"
  },
  "peerDependencies": {
    "ramda": ">=0.29.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ramda": "^0.30.2",
    "ramda": "^0.30.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0"
  }
}
