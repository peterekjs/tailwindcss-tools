{
  "name": "@peterek/tailwindcss-tools",
  "version": "0.2.0",
  "description": "Tools to help building Tailwind CSS plugins library",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "css",
    "tailwind",
    "tailwindcss",
    "tool",
    "tools",
    "plugin",
    "plugins"
  ],
  "author": {
    "name": "Jiri Peterek",
    "email": "jiri@peterek.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterekjs/tailwindcss-tools.git"
  },
  "bugs": {
    "url": "https://github.com/peterekjs/tailwindcss-tools/issues"
  },
  "homepage": "https://github.com/peterekjs/tailwindcss-tools#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/tailwindcss-tools.cjs",
      "default": "./dist/tailwindcss-tools.js"
    },
    "./src/*": "./src/*"
  },
  "types": "./dist/index.d.ts",
  "typescript": {
    "definition": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@peterek/helpers": "^2.1.0"
  },
  "peerDependencies": {
    "ramda": "^0.29.1",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.15",
    "@types/ramda": "^0.29.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  }
}
